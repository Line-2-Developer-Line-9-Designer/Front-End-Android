<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/blue">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환영합니다!"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/idEt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="46dp"
        android:background="@color/white"
        android:fontFamily="@font/pretendard_regular"
        android:hint="아이디를 입력해 주세요."
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/idTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="아이디"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/idEt"
        app:layout_constraintStart_toStartOf="@id/idEt" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/duplicateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/pretendard_bold"
        android:text="중복확인"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idEt" />

    <EditText
        android:id="@+id/pwEt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:fontFamily="@font/pretendard_regular"
        android:hint="비밀번호를 입력해 주세요."
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duplicateBtn" />

    <TextView
        android:id="@+id/pwTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="비밀번호"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/pwEt"
        app:layout_constraintStart_toStartOf="@id/pwEt" />

    <EditText
        android:id="@+id/pwConfirmEt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:fontFamily="@font/pretendard_regular"
        android:hint="비밀번호 확인을 위해 입력해 주세요."
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pwEt" />

    <EditText
        android:id="@+id/nickNameEt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="46dp"
        android:background="@color/white"
        android:fontFamily="@font/pretendard_regular"
        android:hint="비밀번호를 입력해 주세요."
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pwConfirmEt" />

    <TextView
        android:id="@+id/nickNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="닉네임"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/nickNameEt"
        app:layout_constraintStart_toStartOf="@id/nickNameEt" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="가입완료"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/green"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:paddingBottom="9dp"
        android:textSize="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>